<h1>Listing conversations</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Category</th>
    <th>Body</th>
    <th>Forum</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @conversations.each do |conversation| %>
  <tr>
    <td><%= conversation.title %></td>
    <td><%= conversation.category %></td>
    <td><%= conversation.body %></td>
    <td><%= conversation.forum %></td>
    <td><%= conversation.user %></td>
    <td><%= link_to 'Show', conversation %></td>
    <td><%= link_to 'Edit', edit_conversation_path(conversation) %></td>
    <td><%= link_to 'Destroy', conversation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

