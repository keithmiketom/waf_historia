 <% if current_user && @profile.user_id == current_user.id %>
<h1>My Profile</h1>
<% else %>
<h1><%= @profile.firstname.titleize %>'s Profile</h1>
<% end %>
<% if @profile.user.admin? %>
<span>admin</span>
<% else %>
<span>Member</span>
<%end%>
<%= image_tag avatar_url(@profile.user) %>

<p>
  <b>Name</b><br />
  <%= @profile.firstname.titleize %> <%= @profile.lastname.titleize %>
  
</p>
<p>
  <b>Last signed in at:</b>
  <%= @profile.user.last_sign_in_at.strftime('%d/%m/%Y %H:%M') %>
</p>

<% if current_user && @profile.user_id == current_user.id %>
<aside>
<h3>Contact Details</h3>
<b>Address</b>
<address>
  <%= @profile.address1 %><br />
  <%= @profile.address2 %><br />
  <%= @profile.city %><br />
  <%= @profile.county %><br />
</address>
 <b>Mobile</b>
<p>
 
<%= @profile.mobile %>
</p>
  <b>Email</b>
  <p>
<%= @profile.user.email %>
</p>
<p>
  <b>User:</b>
  <%= @profile.user_id %>
  </p>

<%= link_to 'Edit', edit_profile_path(@profile) , :class => "btn btn-warning"%> |
<%= link_to 'Back', profiles_path , :class => "btn btn-info"%>

<% else %>
<p> <%= link_to 'Back', profiles_path , :class => "btn btn-info"%> </p>
</aside>
<% end %>
