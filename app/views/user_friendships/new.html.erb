<% if @friend%>
<h2><%= @friend.username%></h2>

<p>Do you really want to friend <%= @friend.username %></p>

<% form_for @user_friendship, method: :post do |form|%>
<div class="form form-actions">
	<%= form.hidden_field :friend_id, value: @friend %>
	<%= submit_tag, "Add as Friend", :class => "btn btn-info" %>
	<%= link_to "cancel", profile_path(@friend), :class => "btn btn-info"%>
</div>
<% end %>
<% end%>
